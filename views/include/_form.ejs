<!--form handling-->
<form method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <laber for="name" class="text-light">Name</laber>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter Your Name">
        </div>
        <div class="form-group">
            <laber for="Email" class="text-light">Email</laber>
            <input type="text" name="Email" value="" placeholder="Enter Your Email">
        </div>
        <div class="form-group">
            <laber for="Gender" class="text-light">Gender</laber>
            <div class="radio inline">
                <input type="radio" name="Gender" value="Male">
                <laber for="Gender" class="text-light">Male</laber>
            </div>
            <div class="radio inline">
                <input type="radio" name="Gender" value="Female">
                <laber for="Gender" class="text-light">Female</laber>
            </div>
        </div>
        <div class="form-group">
            <laber for="Gender" class="text-light">Status</laber>
            <div class="radio inline">
                <input type="radio" name="Status" value="Active">
                <laber for="Gender" class="text-light">Active</laber>
            </div>
            <div class="radio inline">
                <input type="radio" name="Status" value="Inactive">
                <laber for="Gender" class="text-light">Inactive</laber>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>