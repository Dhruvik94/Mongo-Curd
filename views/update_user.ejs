<!--include header-->
<%- include('include/_header') %>
    <!--/include header-->

    <!--Main Site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <span class="text-light">Use The below form to Update an account</span>
            </div>
            <!--form handling-->
            <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <laber for="name" class="text-light">Name</laber>
                        <input type="hidden" name="id" value="">
                        <input type="text" name="name" value="" placeholder="Enter Your Name">
                    </div>
                    <div class="form-group">
                        <laber for="Email" class="text-light">Email</laber>
                        <input type="text" name="Email" value="" placeholder="Enter Your Email">
                    </div>
                    <div class="form-group">
                        <laber for="Gender" class="text-light">Gender</laber>
                        <div class="radio inline">
                            <input type="radio" name="Gender" value="Male">
                            <laber for="Gender" class="text-light">Male</laber>
                        </div>
                        <div class="radio inline">
                            <input type="radio" name="Gender" value="Female">
                            <laber for="Gender" class="text-light">Female</laber>
                        </div>
                    </div>
                    <div class="form-group">
                        <laber for="Gender" class="text-light">Status</laber>
                        <div class="radio inline">
                            <input type="radio" name="Status" value="Active">
                            <laber for="Gender" class="text-light">Active</laber>
                        </div>
                        <div class="radio inline">
                            <input type="radio" name="Status" value="Inactive">
                            <laber for="Gender" class="text-light">Inactive</laber>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Update</button>
                    </div>
                </div>
            </form>

        </div>
    </main>
    <!--Main Site-->

    <!--include footer-->
    <%- include('include/_footer') %>
        <!--/include footer-->